@model OnlineAptitdeTest.Models.Test

@{
    ViewData["Title"] = "DetailsTest";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1>Test Details</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestName)
        </dd>
        <dt class="col-sm-2">
            Questions
        </dt>
        <dd class="col-sm-10">
            @if (Model.Questions != null && Model.Questions.Any())
            {
                <ul>
                    @foreach (var question in Model.Questions)
                    {
                        <li>@Html.DisplayFor(m => question.QuestionText)</li>
                    }
                </ul>
            }
            else
            {
                <p>No questions available for this test.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="EditTest" asp-route-id="@Model?.TestId">Edit</a> |
    <a asp-action="IndexTest"> Back to List</a>
</div>