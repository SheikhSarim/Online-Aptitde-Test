@model OnlineAptitdeTest.Models.Test

@{
    ViewData["Title"] = "CreateTest";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1 class="text-center mb-4" >Create Test</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestName" class="control-label"></label>
                <input asp-for="TestName" class="form-control" />
                <span asp-validation-for="TestName" class="text-danger"></span>
            </div>
           
            <div class="form-group mt-4 mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexTest" class="my-5">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
