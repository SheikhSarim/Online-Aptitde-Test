@model OnlineAptitdeTest.Models.ViewModels.CreateCandidateViewModel

@{
    ViewData["Title"] = "CreateCandidate";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1 class="text-center mb-5">Add New Candidate</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="CreateCandidate">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <div asp-validation-for="Username" class="invalid-feedback"></div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <div asp-validation-for="Email" class="invalid-feedback"></div>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <div asp-validation-for="Password" class="invalid-feedback"></div>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <div asp-validation-for="ConfirmPassword" class="invalid-feedback"></div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="CandidateList" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}