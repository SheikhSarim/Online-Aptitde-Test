@model IEnumerable<OnlineAptitdeTest.Models.OnlineAptitdeTest.Models.Question>

@{
    ViewData["Title"] = "GetQuestions";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1 class="text-center mb-4">All Questions</h1>

<p>
    <a class="btn btn-primary" asp-action="CreateQuestion">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OptionA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OptionB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OptionC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OptionD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CorrectOption)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Test)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int rowNumber = 1; 
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(rowNumber++)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OptionA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OptionB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OptionC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OptionD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CorrectOption)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Test.TestName)
                    </td>
                    <td>
                        <a class="btn btn-warning mb-1" asp-action="EditQuestion" asp-route-id="@item.QuestionId">Edit</a>
                        <a class="btn btn-info mb-1" asp-action="GetQuestionDetails" asp-route-id="@item.QuestionId">Details</a>
                        <a class="btn btn-danger mb-1" asp-action="DeleteQuestion" asp-route-id="@item.QuestionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>